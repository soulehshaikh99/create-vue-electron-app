{
  "name": "create-vue-electron-app",
  "version": "0.1.0",
  "description": "A simple starter project to get up and developing quickly with the blend of Vue.js and Electron JS for building a Native Desktop App on various OS Platforms like Windows, Linux and macOS using Electron Builder.",
  "main": "main.js",
  "author": "Souleh Shaikh <author.souleh@thegeekytutor.com>",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/soulehshaikh99/create-vue-electron-app"
  },
  "bugs": {
    "url": "https://github.com/soulehshaikh99/create-vue-electron-app/issues"
  },
  "build": {
    "icon": "public/favicon.png",
    "productName": "Vue and Electron App",
    "files": [
      "build/**/*",
      "main.js"
    ],
    "win": {},
    "linux": {},
    "mac": {}
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron": "wait-on http://localhost:8080 && electron .",
    "electron-dev": "concurrently \"yarn run serve\" \"yarn run electron\"",
    "preelectron-pack": "yarn run build",
    "electron-pack": "electron-builder"
  },
  "dependencies": {
    "electron-serve": "^1.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0-0",
    "babel-eslint": "^10.1.0",
    "core-js": "^3.6.5",
    "concurrently": "^5.3.0",
    "electron": "^13.6.6",
    "electron-builder": "^22.8.0",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^7.0.0-0",
    "vue": "^3.0.0-0",
    "wait-on": "^5.2.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "keywords": [
    "cross-platform",
    "native-app",
    "installed-app",
    "desktop-applications",
    "windows",
    "linux",
    "macos",
    "html",
    "css",
    "javascript",
    "front-end",
    "vue",
    "vue-cli",
    "electron",
    "electron-builder",
    "electron-serve",
    "concurrently",
    "wait-on",
    "progressive-framework",
    "front-end-framework"
  ]
}